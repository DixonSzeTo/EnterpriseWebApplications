@model IEnumerable<Demo.Models.Product>
@{
    ViewBag.Title = "Maintenance | Product";
    string name = "";

}
@section head {
    <style>
        mark {
            background: yellow;
        }

        .product-action {
            display: flex;
            gap: 10px; 
        }

        .btn-edit, .btn-delete {
            padding: 10px 20px;
            color: white;
            border: none; 
            border-radius: 5px;
            cursor: pointer; 
            font-size: 16px; 
            transition: background-color 0.3s, transform 0.2s; 
            text-decoration:none;
        }

        .btn-edit {
            background-color: #0B660B;
        }

            .btn-edit:hover {
                background-color: #094f09; 
            }

        .btn-delete {
            background-color: #c0392b; 
        }

            .btn-delete:hover {
                background-color: #a93226; 
            }

            .btn-edit:focus,
            .btn-delete:focus {
                outline: none; 
                box-shadow: 0 0 5px rgba(0, 0, 0, 0.2);
            }

    </style>
}

<h2>Product Maintenance</h2>
<form data-ajax="true"
      data-ajax-loading="#loader"
      data-ajax-success="success"
      autocomplete="off">
    <label><b>Search Product:</b></label>
    <input id="name" name="name" type="search" autofocus>
    <img src="/images/loader.gif" id="loader" style="display: none">
</form>
<br />

<a href="/ProductCRUD/CreateProduct" style="
       display: inline-block;
    padding: 10px 20px;
    background-color: #0B660B;
    color: white;
    text-decoration: none;
    border-radius: 5px; ">
    Add Product
</a>
<br />
<br />

<table class="table">
    <thead>
        <tr>
            <th>ID</th>
            <th>Name</th>
            <th>Price</th>
            <th>Stock</th>
            <th>Category</th>
            <th>Photo URL</th>
            <th>Actions</th>
        </tr>
    </thead>

    <tbody id="productList"> 
        @foreach (var product in Model)
        {
            var backgroundColor = product.Category == "Block" ? "background-color: #ffcccb;" : "";
            <tr id="product-@product.Id" style="@backgroundColor"> 
                <td>@product.Id</td>
                <td>@product.Name</td>
                <td>@product.Price</td>
                <td>@product.Stock</td>
                <td>@product.Category</td>
                <td><img src="/products/@product.PhotoURL" alt="@product.Name" style="max-width:100px;" /></td>
                <td>
                    <div class="product-action">
                        <a href="/ProductCRUD/UpdateProduct/@product.Id" class="btn-edit">Edit</a>

                        <form data-ajax="true"
                              data-ajax-begin="$('.info').text('')"
                              data-ajax-success="deleteProductFromUI('@product.Id'); $('.info').text('Product Deleted.')"
                              style="display: inline"
                              method="post"
                              action="/ProductCRUD/DeleteProduct/@product.Id">
                            <button type="submit" class="btn-delete" data-confirm="Are You Sure?">Delete</button>
                        </form>
                    </div>


                </td>
            </tr>
        }
    </tbody>
</table>
<br />
<div class="info"></div> 
@section foot{

<script>
    function deleteProductFromUI(productId) {
        $('#product-' + productId).remove();
    }

        function success(response) {
            $('#productList').html($(response).find('#productList').html());

            const name = $('#name').val().trim();
            if (!name) return;

            const re = new RegExp(escapeRegExp(name), 'gi');
            $('td:nth-child(2)').each((i, el) => {
                const h = $(el).html().replace(re, '<mark>$&</mark>');
                $(el).html(h);
            });
        }

        function escapeRegExp(string) {
            return string.replace(/[.*+?^${}()|[\]\\]/g, '\\$&');
        }

        let timer = null;
        $('#name').on('input', e => {
            clearTimeout(timer);
            timer = setTimeout(() => {
                $(e.target.form).submit();
            }, 500);
        });

</script>
}