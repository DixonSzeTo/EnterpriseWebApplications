@{
    ViewBag.Title = "Product | Cancel";
}

<style>
    .cancel-message {
        text-align: center;
        margin-top: 50px;
        padding: 20px;
        border: 1px solid #dc3545;
        border-radius: 5px;
        background-color: #f8d7da;
        color: #721c24;
    }
    .cancel-button {
        margin-top: 20px;
    }
    .cancel-button a {
        text-decoration: none;
        padding: 10px 20px;
        background-color: #dc3545; 
        color: white;
        border-radius: 5px;
        transition: background-color 0.3s; 
    }
    .cancel-button a:hover {
        background-color: #c82333;
    }
</style>

<body>
    <div class="container">
        <div class="cancel-message">
            <h2>Checkout Canceled</h2>
            <p>It seems that you have canceled your checkout process.</p>
            <p>View <a href="/Product/ShoppingCart">your shopping cart</a> to review your items.</p>
            <div class="cancel-button">
                <a href="/Product/ShoppingCart">Go to Cart</a>
            </div>
        </div>
    </div>
</body>
