  @{
  ViewBag.Title = "Product | Top Selling Products";
  }
@section head {
    <style>
        .products {
            display: flex;
            flex-wrap: wrap;
            gap: 10px;
        }

        .product {
            display: flex;
            flex-direction: column;
            justify-content: space-between;
            width: 270px;
            height: 400px;
            position: relative;
            padding: 5px;
            box-sizing: border-box;
        }

            .product > img {
                width: 100%;
                height: 250px;
                object-fit: cover; 
                background-color: grey;
            }

            .product > form,
            .product > .details {
                background: #0009;
                color: #fff;
                padding: 5px;
                text-align: right;
            }

            .product > .details {
                flex-grow: 1;
                display: flex;
                flex-direction: column;
                justify-content:center;
                text-align: center;
            }

        .name {
            font-weight: 700;
            margin-bottom: 5px;
            padding: 6px;
            border-bottom: 1px solid white;
        }

        .product.unavailable {
            position: relative;
            pointer-events: none;
        }

        .unavailable-label {
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background-color: rgba(107, 107, 107, 0.5);
            display: flex;
            justify-content: center;
            align-items: center;
            z-index: 10;
            color: white;
            font-size: 1.5em;
            font-weight: bold;
        }

        .button-link {
            background-color: darkgreen;
            color: white;
            border: none;
            padding: 10px 10px;
            text-align: center;
            text-decoration: none;
            display: inline-block;
            font-size: 16px;
            margin: 2px 2px;
            cursor: pointer;
            border-radius: 8px;
        }

            .button-link:hover {
                background-color: #45a049;
            }

    </style>
}

<div id="target">
    <partial name="_index">

</div>
