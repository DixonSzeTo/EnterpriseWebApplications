@{
    ViewBag.Title = "Member Report | Account Status";
}


<div id="memberReportChart" style="width: 800px; height: 400px"></div>

@section foot {
    <script src="https://www.gstatic.com/charts/loader.js"></script>
    <script>
        google.charts.load('current', { packages: ['corechart'] });
        google.charts.setOnLoadCallback(initMemberReportChart);

        let memberReportDt, memberReportOpt, memberReportCht;

        function initMemberReportChart() {
            memberReportDt = new google.visualization.DataTable();
            memberReportDt.addColumn('string', 'Status');
            memberReportDt.addColumn('number', 'Count');

            const style = { bold: true, italic: false, fontSize: 20, color: 'crimson' };

            memberReportOpt = {
                title: 'Member Status Report',
                fontName: 'Roboto',
                fontSize: 16,
                titleTextStyle: { fontSize: 20 },
                pieSliceText: 'label',
                chartArea: {
                    width: '90%',
                    height: '90%',
                    top: 50,
                    left: 50,
                },
                legend: { position: 'right', alignment: 'center' },
                colors: ['#FF6347', '#4682B4'],
                animation: { duration: 500, startup: true },
                pieHole: 0.25,
            };




            memberReportCht = new google.visualization.PieChart(document.getElementById('memberReportChart'));

            fetch('/Chart/Data8')
                .then(response => response.json())
                .then(data => {
                    memberReportDt.addRows(data);
                    memberReportCht.draw(memberReportDt, memberReportOpt);
                })
                .catch(error => console.error('Error fetching member report data:', error));
        }
    </script>
}
